<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TripWheels Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }

        .sidebar-header {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }

        .welcome-title {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .stat-card {
            transition: transform 0.3s ease;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            color: white;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-icon {
            font-size: 2.5rem;
            opacity: 0.8;
        }
        .quick-action-card {
            border: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .quick-action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        .booking-card {
            border-left: 4px solid #4361ee;
        }
    </style>
</head>

<body class="bg-light">
    <!-- Include Dashboard Header -->
    <%- include('header'); %>

    <!-- Dashboard Content -->
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Include Dashboard Sidebar -->
            <%- include('sidebar'); %>

            <!-- Main Content Area -->
            <div class="col-lg-9 col-md-8">
                
                <!-- Welcome Section -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h2 class="welcome-title fw-bold mb-2">Welcome, <%= user.name %>! ðŸ‘‹</h2>
                                <p class="text-muted">Manage your bookings, vehicles, and account settings.</p>
                                <div class="d-flex flex-wrap gap-2 mt-3">
                                    <a href="/booking" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i>New Booking
                                    </a>
                                    <a href="/my-bookings" class="btn btn-outline-primary">
                                        <i class="fas fa-calendar-check me-1"></i>View Bookings
                                    </a>
                                    <% if (user.isAdmin) { %>
                                    <a href="/view-registration" class="btn btn-success">
                                        <i class="fas fa-users me-1"></i>Manage Users
                                    </a>
                                    <% } %>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="bg-primary rounded-circle p-4 d-inline-block">
                                    <i class="fas fa-user text-white" style="font-size: 3rem;"></i>
                                </div>
                                <p class="mt-2 mb-0"><%= user.email %></p>
                                <span class="badge bg-<%= user.isAdmin ? 'danger' : 'info' %>">
                                    <%= user.isAdmin ? 'Admin' : 'User' %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="stat-card bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="card-title mb-0"><%= bookingCount || 0 %></h3>
                                        <p class="card-text mb-0">My Bookings</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="card-title mb-0"><%= userCount || 0 %></h3>
                                        <p class="card-text mb-0">Total Users</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card bg-warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="card-title mb-0"><%= contactCount || 0 %></h3>
                                        <p class="card-text mb-0">Contacts</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-address-book"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="stat-card bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h3 class="card-title mb-0">24/7</h3>
                                        <p class="card-text mb-0">Support</p>
                                    </div>
                                    <div class="stat-icon">
                                        <i class="fas fa-headset"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h5 class="mb-3">Quick Actions</h5>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/booking" class="text-decoration-none">
                            <div class="card quick-action-card text-center p-3">
                                <i class="fas fa-plus-circle text-primary fa-2x mb-2"></i>
                                <h6>New Booking</h6>
                                <small class="text-muted">Book a vehicle</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/vehicles" class="text-decoration-none">
                            <div class="card quick-action-card text-center p-3">
                                <i class="fas fa-car text-success fa-2x mb-2"></i>
                                <h6>Browse Vehicles</h6>
                                <small class="text-muted">View all vehicles</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/my-bookings" class="text-decoration-none">
                            <div class="card quick-action-card text-center p-3">
                                <i class="fas fa-history text-info fa-2x mb-2"></i>
                                <h6>Booking History</h6>
                                <small class="text-muted">View past bookings</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="/settings" class="text-decoration-none">
                            <div class="card quick-action-card text-center p-3">
                                <i class="fas fa-cog text-warning fa-2x mb-2"></i>
                                <h6>Settings</h6>
                                <small class="text-muted">Account settings</small>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Recent Bookings -->
                <% if (recentBookings && recentBookings.length > 0) { %>
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-clock me-2"></i>Recent Bookings
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Booking ID</th>
                                                <th>Vehicle</th>
                                                <th>From - To</th>
                                                <th>Date</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% recentBookings.forEach((booking, index) => { %>
                                            <tr class="booking-card">
                                                <td>
                                                    <small>#<%= booking._id.toString().slice(-6) %></small>
                                                </td>
                                                <td>
                                                    <strong><%= booking.vehicleType %></strong><br>
                                                    <small class="text-muted"><%= booking.vehicleName %></small>
                                                </td>
                                                <td>
                                                    <small><%= booking.pickupCity %> â†’ <%= booking.dropCity %></small>
                                                </td>
                                                <td>
                                                    <small><%= new Date(booking.pickupDate).toLocaleDateString('en-IN') %></small>
                                                </td>
                                                <td>
                                                    <strong class="text-success">â‚¹<%= booking.totalAmount %></strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= 
                                                        booking.status === 'Confirmed' ? 'success' : 
                                                        booking.status === 'Pending' ? 'warning' : 
                                                        booking.status === 'Cancelled' ? 'danger' : 'info'
                                                    %>">
                                                        <%= booking.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/booking/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="text-center mt-3">
                                    <a href="/my-bookings" class="btn btn-outline-primary">
                                        View All Bookings <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>
                <!-- No Bookings -->
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-calendar-times text-muted fa-4x mb-3"></i>
                                <h4 class="text-muted">No Bookings Yet</h4>
                                <p class="text-muted mb-4">Start by creating your first booking</p>
                                <a href="/booking" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Create First Booking
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                
                <!-- Admin Stats (Only for admin) -->
                <% if (user.isAdmin) { %>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-chart-bar me-2"></i>Admin Statistics
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4 text-center mb-3">
                                        <div class="display-6 text-primary"><%= userCount || 0 %></div>
                                        <small class="text-muted">Total Users</small>
                                    </div>
                                    <div class="col-md-4 text-center mb-3">
                                        <div class="display-6 text-success"><%= contactCount || 0 %></div>
                                        <small class="text-muted">Contact Messages</small>
                                    </div>
                                    <div class="col-md-4 text-center mb-3">
                                        <div class="display-6 text-warning">
                                            <%= recentBookings ? recentBookings.length : 0 %>
                                        </div>
                                        <small class="text-muted">Recent Bookings</small>
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="/view-registration" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-users me-1"></i>Manage Users
                                    </a>
                                    <a href="/view-contact" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-address-book me-1"></i>View Contacts
                                    </a>
                                    <a href="/add-vehicle" class="btn btn-sm btn-outline-warning">
                                        <i class="fas fa-car me-1"></i>Add Vehicle
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-refresh dashboard every 60 seconds
        setTimeout(() => {
            window.location.reload();
        }, 60000);
        
        // Notifications
        if (typeof bookingCount !== 'undefined' && bookingCount === 0) {
            setTimeout(() => {
                const toast = document.createElement('div');
                toast.className = 'position-fixed bottom-0 end-0 p-3';
                toast.innerHTML = `
                    <div class="toast show" role="alert">
                        <div class="toast-header">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            <strong class="me-auto">TripWheels</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            Welcome to TripWheels! Start by creating your first booking.
                        </div>
                    </div>
                `;
                document.body.appendChild(toast);
            }, 2000);
        }
    </script>
</body>

</html>