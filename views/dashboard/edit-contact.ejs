<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Contact Message - TripWheels Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }
        .sidebar-header {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }
        .edit-form {
            max-width: 800px;
            margin: 0 auto;
        }
        .contact-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #4361ee, #3f37c9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            margin: 0 auto 20px;
        }
        .info-card {
            border-left: 4px solid #4361ee;
        }
        .form-section {
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }
        .last-section {
            border-bottom: none;
        }
        .status-badge {
            font-size: 0.75rem;
            padding: 3px 8px;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Include Dashboard Header -->
    <%- include('header'); %>

    <!-- Dashboard Content -->
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Include Dashboard Sidebar -->
            <%- include('sidebar'); %>

            <!-- Main Content Area -->
            <div class="col-lg-9 col-md-8">
                <!-- Page Header -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-edit me-2"></i>Edit Contact Message
                            </h3>
                            <div>
                                <a href="/contacts-table" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to Messages
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Success/Error Messages -->
                <% if (typeof message !== 'undefined') { %>
                    <div class="alert alert-<%= messageType === 'success' ? 'success' : 'danger' %> alert-dismissible fade show mb-4" role="alert">
                        <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Contact Info Card -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <h4>Edit Contact Message</h4>
                            <p class="text-muted">
                                <i class="fas fa-id-card me-1"></i> Message ID: <%= contact._id %>
                            </p>
                            <small class="text-muted">
                                Received on: <%= new Date(contact.date).toLocaleString('en-IN') %>
                            </small>
                        </div>

                        <!-- Current Info Summary -->
                        <div class="card info-card mb-4">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="fas fa-info-circle me-2"></i>Current Information
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>From:</strong> <%= contact.name %></p>
                                        <p class="mb-1"><strong>Email:</strong> <%= contact.email %></p>
                                        <p class="mb-1"><strong>Phone:</strong> <%= contact.phone || 'N/A' %></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Subject:</strong> 
                                            <span class="badge bg-<%= 
                                                contact.subject === 'Booking Inquiry' ? 'success' : 
                                                contact.subject === 'Complaint' ? 'danger' : 
                                                contact.subject === 'Feedback' ? 'info' : 
                                                contact.subject === 'Partnership' ? 'warning' : 'secondary'
                                            %> status-badge">
                                                <%= contact.subject %>
                                            </span>
                                        </p>
                                        <p class="mb-1"><strong>Status:</strong> 
                                            <span class="badge bg-<%= contact.read ? 'success' : 'warning' %> status-badge">
                                                <%= contact.read ? 'Read' : 'Unread' %>
                                            </span>
                                        </p>
                                        <p class="mb-1"><strong>Message Length:</strong> <%= contact.message.length %> characters</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Edit Form -->
                        <form method="POST" action="/update-contact/<%= contact._id %>" id="editContactForm">
                            
                            <!-- Contact Information Section -->
                            <div class="form-section">
                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-user me-2"></i>Contact Information
                                </h5>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Name *</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-user"></i>
                                            </span>
                                            <input type="text" name="name" class="form-control" 
                                                   value="<%= contact.name %>" required
                                                   placeholder="Enter contact name">
                                        </div>
                                        <div class="form-text">Sender's full name</div>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email Address *</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="fas fa-envelope"></i>
                                            </span>
                                            <input type="email" name="email" class="form-control" 
                                                   value="<%= contact.email %>" required
                                                   placeholder="Enter email address">
                                        </div>
                                        <div class="form-text">Sender's email address</div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Phone Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-phone"></i>
                                        </span>
                                        <input type="tel" name="phone" class="form-control" 
                                               value="<%= contact.phone || '' %>"
                                               placeholder="Enter phone number (optional)"
                                               pattern="[0-9]{10}" 
                                               title="Please enter a valid 10-digit phone number">
                                    </div>
                                    <div class="form-text">Optional 10-digit mobile number</div>
                                </div>
                            </div>

                            <!-- Message Details Section -->
                            <div class="form-section">
                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-envelope me-2"></i>Message Details
                                </h5>
                                
                                <div class="mb-3">
                                    <label class="form-label">Subject *</label>
                                    <select class="form-select" name="subject" required>
                                        <option value="Booking Inquiry" <%= contact.subject === 'Booking Inquiry' ? 'selected' : '' %>>Booking Inquiry</option>
                                        <option value="Vehicle Information" <%= contact.subject === 'Vehicle Information' ? 'selected' : '' %>>Vehicle Information</option>
                                        <option value="Complaint" <%= contact.subject === 'Complaint' ? 'selected' : '' %>>Complaint</option>
                                        <option value="Feedback" <%= contact.subject === 'Feedback' ? 'selected' : '' %>>Feedback</option>
                                        <option value="Partnership" <%= contact.subject === 'Partnership' ? 'selected' : '' %>>Partnership</option>
                                        <option value="Other" <%= contact.subject === 'Other' ? 'selected' : '' %>>Other</option>
                                    </select>
                                    <div class="form-text">Category of the message</div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Message *</label>
                                    <textarea class="form-control" name="message" rows="6" required
                                              placeholder="Enter the message content"><%= contact.message %></textarea>
                                    <div class="form-text">Full message content</div>
                                </div>
                            </div>

                            <!-- Admin Settings Section -->
                            <div class="form-section last-section">
                                <h5 class="mb-3 text-primary">
                                    <i class="fas fa-cog me-2"></i>Admin Settings
                                </h5>
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Status</label>
                                        <select class="form-select" name="status">
                                            <option value="new" <%= contact.status === 'new' ? 'selected' : '' %>>New</option>
                                            <option value="read" <%= contact.status === 'read' ? 'selected' : '' %>>Read</option>
                                            <option value="replied" <%= contact.status === 'replied' ? 'selected' : '' %>>Replied</option>
                                            <option value="archived" <%= contact.status === 'archived' ? 'selected' : '' %>>Archived</option>
                                        </select>
                                        <div class="form-text">Current message status</div>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Read Status</label>
                                        <div class="form-check mt-2">
                                            <input class="form-check-input" type="checkbox" name="read" 
                                                   id="readCheckbox" <%= contact.read ? 'checked' : '' %>>
                                            <label class="form-check-label" for="readCheckbox">
                                                Mark as Read
                                            </label>
                                        </div>
                                        <div class="form-text">Toggle read/unread status</div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Admin Notes</label>
                                    <textarea class="form-control" name="admin_notes" rows="3" 
                                              placeholder="Add admin notes about this contact..."><%= contact.admin_notes || '' %></textarea>
                                    <div class="form-text">Internal notes for admin reference</div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between mt-4">
                                <div>
                                    <a href="/contacts-table" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Cancel
                                    </a>
                                </div>
                                <div>
                                    <button type="button" class="btn btn-danger me-2" 
                                            onclick="confirmDelete('<%= contact._id %>')">
                                        <i class="fas fa-trash me-1"></i>Delete Message
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-1"></i>Save Changes
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Contact Activity Log -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h6 class="mb-0">
                            <i class="fas fa-history me-2"></i>Message Activity
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <i class="fas fa-paper-plane text-primary me-2"></i>
                                Message sent on: <strong><%= new Date(contact.date).toLocaleString('en-IN') %></strong>
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-sync-alt text-info me-2"></i>
                                Last updated: <strong><%= new Date(contact.updatedAt || contact.date).toLocaleString('en-IN') %></strong>
                            </li>
                            <li class="list-group-item">
                                <i class="fas fa-eye <%= contact.read ? 'text-success' : 'text-warning' %> me-2"></i>
                                Read Status: 
                                <span class="badge bg-<%= contact.read ? 'success' : 'warning' %>">
                                    <%= contact.read ? 'Read' : 'Unread' %>
                                </span>
                            </li>
                            <% if (contact.replied_at) { %>
                            <li class="list-group-item">
                                <i class="fas fa-reply text-success me-2"></i>
                                Replied on: <strong><%= new Date(contact.replied_at).toLocaleString('en-IN') %></strong>
                            </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-trash fa-3x text-danger mb-3"></i>
                        <h5>Are you sure you want to delete this message?</h5>
                        <p class="text-muted">
                            This action cannot be undone. The contact message will be permanently deleted.
                        </p>
                        <div class="alert alert-warning">
                            <strong>From: </strong> <%= contact.name %><br>
                            <strong>Subject: </strong> <%= contact.subject %><br>
                            <strong>Date: </strong> <%= new Date(contact.date).toLocaleDateString('en-IN') %>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancel
                    </button>
                    <a href="/contacts/delete/<%= contact._id %>" class="btn btn-danger" id="confirmDeleteBtn">
                        <i class="fas fa-trash me-1"></i>Delete Permanently
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Phone number validation
        document.querySelector('input[name="phone"]').addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '').slice(0, 10);
        });

        // Form validation
        document.getElementById('editContactForm').addEventListener('submit', function(e) {
            const email = document.querySelector('input[name="email"]').value;
            const name = document.querySelector('input[name="name"]').value;
            const message = document.querySelector('textarea[name="message"]').value;
            
            // Email validation
            if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                e.preventDefault();
                alert('Please enter a valid email address!');
                return;
            }
            
            // Name validation
            if (name.trim().length < 2) {
                e.preventDefault();
                alert('Please enter a valid name (minimum 2 characters)!');
                return;
            }
            
            // Message validation
            // if (message.trim().length < 5) {
            //     e.preventDefault();
            //     alert('Please enter a meaningful message (minimum 5 characters)!');
            //     return;
            // }
            
            // Show loading
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Saving...';
            submitBtn.disabled = true;
            
            // Form will submit automatically
        });

        // Delete confirmation
        function confirmDelete(contactId) {
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        // Character counters
        const messageTextarea = document.querySelector('textarea[name="message"]');
        const notesTextarea = document.querySelector('textarea[name="admin_notes"]');
        
        // Message character counter
        const messageCounter = document.createElement('small');
        messageCounter.className = 'form-text text-end d-block';
        messageTextarea.parentNode.appendChild(messageCounter);
        
        messageTextarea.addEventListener('input', function() {
            const count = this.value.length;
            messageCounter.textContent = `${count} characters`;
            
            if (count < 10) {
                messageCounter.classList.add('text-danger');
                this.classList.add('is-invalid');
            } else {
                messageCounter.classList.remove('text-danger');
                this.classList.remove('is-invalid');
            }
        });
        
        // Notes character counter
        const notesCounter = document.createElement('small');
        notesCounter.className = 'form-text text-end d-block';
        notesTextarea.parentNode.appendChild(notesCounter);
        
        notesTextarea.addEventListener('input', function() {
            const count = this.value.length;
            notesCounter.textContent = `${count}/500 characters`;
            
            if (count > 500) {
                notesCounter.classList.add('text-danger');
                this.classList.add('is-invalid');
            } else {
                notesCounter.classList.remove('text-danger');
                this.classList.remove('is-invalid');
            }
        });
        
        // Trigger initial counts
        messageTextarea.dispatchEvent(new Event('input'));
        notesTextarea.dispatchEvent(new Event('input'));

        // Real-time form validation
        document.querySelectorAll('input[required], select[required], textarea[required]').forEach(input => {
            input.addEventListener('blur', function() {
                if (!this.value.trim()) {
                    this.classList.add('is-invalid');
                } else {
                    this.classList.remove('is-invalid');
                }
            });
        });

        // Auto-save draft (optional)
        let autoSaveTimer;
        document.getElementById('editContactForm').addEventListener('input', function() {
            clearTimeout(autoSaveTimer);
            autoSaveTimer = setTimeout(() => {
                const saveDraftBtn = document.createElement('button');
                saveDraftBtn.type = 'button';
                saveDraftBtn.className = 'btn btn-sm btn-outline-info mt-2';
                saveDraftBtn.innerHTML = '<i class="fas fa-save me-1"></i>Save Draft';
                saveDraftBtn.onclick = function() {
                    // Implement draft saving logic here
                    alert('Draft saved locally!');
                    this.remove();
                };
                
                // Add save draft button if not already present
                if (!document.querySelector('.draft-save-btn')) {
                    saveDraftBtn.classList.add('draft-save-btn');
                    document.querySelector('.card-body').appendChild(saveDraftBtn);
                }
            }, 2000);
        });
    </script>
</body>
</html> 