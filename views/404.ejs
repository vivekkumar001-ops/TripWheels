<%- include('common/header') %>
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-md-8 col-lg-6">
                <div class="error-content">
                    <h1 class="display-1 fw-bold text-primary">404</h1>
                    <h2 class="mb-4">Page Not Found</h2>
                    <p class="lead mb-4">Sorry, the page you're looking for doesn't exist or has been moved.</p>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                        <a href="/vehicles" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-car me-2"></i>Browse Vehicles
                        </a>
                        <a href="/contact" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-headset me-2"></i>Get Help
                        </a>
                    </div>
                </div>
                
                <!-- Quick Links -->
                <div class="row mt-5">
                    <div class="col-12">
                        <h5 class="mb-4">Quick Links</h5>
                        <div class="row">
                            <div class="col-md-3 col-6 mb-3">
                                <a href="/vehicles" class="text-decoration-none">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body text-center">
                                            <i class="fas fa-car text-primary mb-2"></i>
                                            <small>Vehicles</small>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <a href="/cities" class="text-decoration-none">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body text-center">
                                            <i class="fas fa-map-marker-alt text-success mb-2"></i>
                                            <small>Cities</small>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <a href="/about" class="text-decoration-none">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body text-center">
                                            <i class="fas fa-info-circle text-info mb-2"></i>
                                            <small>About</small>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <a href="/contact" class="text-decoration-none">
                                    <div class="card border-0 shadow-sm h-100">
                                        <div class="card-body text-center">
                                            <i class="fas fa-phone text-warning mb-2"></i>
                                            <small>Contact</small>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .error-content {
            padding: 60px 0;
        }
        .display-1 {
            font-size: 8rem;
        }
        @media (max-width: 768px) {
            .display-1 {
                font-size: 5rem;
            }
        }
    </style>
<%- include('common/footer') %>