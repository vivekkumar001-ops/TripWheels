    <!-- Popular Cities -->
    <section id="cities" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Explore Popular Destinations</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="city-card">
                        <img src="/img/Delhi.webp" alt="Delhi">
                        <div class="city-overlay">
                            <h5>Delhi</h5>
                            <p>Capital City • Historical Sites</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="city-card">
                        <img src="/img/Goa.webp" alt="Goa">
                        <div class="city-overlay">
                            <h5>Goa</h5>
                            <p>Beaches • Nightlife</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="city-card">
                        <img src="/img/Jaipur.webp" alt="Jaipur">
                        <div class="city-overlay">
                            <h5>Jaipur</h5>
                            <p>Pink City • Forts</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="/cities" class="btn btn-outline-primary btn-lg">View All Cities</a>
            </div>
        </div>
    </section>

