<%- include('common/header') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">Explore India with Comfort & Style</h1>
                    <p class="lead mb-4">Book reliable tourist vehicles across 100+ cities in India. From sedans to tempo travellers, we have the perfect ride for your journey.</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="/vehicles" class="btn btn-warning btn-lg">Book Now</a>
                        <a href="#cities" class="btn btn-outline-light btn-lg">Explore Cities</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Booking Form -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="booking-form">
                <h3 class="text-center mb-4">Book Your Vehicle in 3 Simple Steps</h3>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Pickup City</label>
                        <select class="form-select">
                            <option selected>Select City</option>
                            <option>Delhi</option>
                            <option>Mumbai</option>
                            <option>Bangalore</option>
                            <option>Goa</option>
                            <option>Jaipur</option>
                            <option>Kerala</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Vehicle Type</label>
                        <select class="form-select">
                            <option selected>Select Vehicle</option>
                            <option>Hatchback</option>
                            <option>Sedan</option>
                            <option>SUV</option>
                            <option>Innova</option>
                            <option>Tempo Traveller</option>
                            <option>Bus</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Pickup Date</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Duration</label>
                        <select class="form-select">
                            <option>1 Day</option>
                            <option>2 Days</option>
                            <option>3 Days</option>
                            <option>1 Week</option>
                            <option>Custom</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose TripWheels?</h2>
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt text-white fs-4"></i>
                    </div>
                    <h5>Safe & Secure</h5>
                    <p class="text-muted">Verified drivers and well-maintained vehicles for your safety</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-rupee-sign text-white fs-4"></i>
                    </div>
                    <h5>Best Prices</h5>
                    <p class="text-muted">Competitive pricing with no hidden charges</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-headset text-white fs-4"></i>
                    </div>
                    <h5>24/7 Support</h5>
                    <p class="text-muted">Round-the-clock customer support for all your queries</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="feature-icon">
                        <i class="fas fa-map-marker-alt text-white fs-4"></i>
                    </div>
                    <h5>Pan India</h5>
                    <p class="text-muted">Available in 100+ cities across India</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Vehicles -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Our Popular Vehicles</h2>
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="card vehicle-card">
                        <img src="/img/Hatchback.avif" class="card-img-top" alt="Hatchback" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Hatchback</h5>
                            <p class="card-text text-muted">Compact cars perfect for city tours</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">₹12/km</span>
                                <a href="/vehicle/1" class="btn btn-outline-primary">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card vehicle-card">
                        <img src="/img/Sedan.jpeg" class="card-img-top" alt="Sedan" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Sedan</h5>
                            <p class="card-text text-muted">Comfortable cars for family trips</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">₹15/km</span>
                                <a href="/vehicle/2" class="btn btn-outline-primary">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card vehicle-card">
                        <img src="/img/SUV.jpg" class="card-img-top" alt="SUV" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">SUV</h5>
                            <p class="card-text text-muted">Spacious vehicles for hill stations</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">₹18/km</span>
                                <a href="/vehicle/3" class="btn btn-outline-primary">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="card vehicle-card">
                        <img src="/img/Tempo Traveller.jpeg" class="card-img-top" alt="Tempo Traveller" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Tempo Traveller</h5>
                            <p class="card-text text-muted">Perfect for group tours</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary">₹25/km</span>
                                <a href="/vehicle/4" class="btn btn-outline-primary">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="/vehicles" class="btn btn-primary btn-lg">View All Vehicles</a>
            </div>
        </div>
