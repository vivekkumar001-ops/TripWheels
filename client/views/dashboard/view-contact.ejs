<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Contact Messages - TripWheels Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }
        .sidebar-header {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }
        .table th {
            background-color: #4361ee;
            color: white;
        }
        .unread {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        .status-badge {
            font-size: 0.75rem;
            padding: 3px 8px;
        }
        .message-preview {
            max-width: 300px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Include Dashboard Header -->
    <%- include('header'); %>

    <!-- Dashboard Content -->
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Include Dashboard Sidebar -->
            <%- include('sidebar'); %>

            <!-- Main Content Area -->
            <div class="col-lg-9 col-md-8">
                <!-- Page Header -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title mb-0 text-primary">
                                <i class="fas fa-address-book me-2"></i>Contact Messages
                            </h3>
                            <div>
                                <a href="/dashboard" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contacts Table -->
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <% if (typeof error !== 'undefined') { %>
                            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <% if (contacts && contacts.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>S.NO</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Subject</th>
                                            <th>Message</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% contacts.forEach((contact, index) => { %>
                                        <tr class="<%= !contact.read ? 'unread' : '' %>">
                                            <td><%= index + 1 %></td>
                                            <td><strong><%= contact.name %></strong></td>
                                            <td><%= contact.email %></td>
                                            <td><%= contact.phone || 'N/A' %></td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    contact.subject === 'Booking Inquiry' ? 'success' : 
                                                    contact.subject === 'Complaint' ? 'danger' : 
                                                    contact.subject === 'Feedback' ? 'info' : 
                                                    contact.subject === 'Partnership' ? 'warning' : 'secondary'
                                                %> status-badge">
                                                    <%= contact.subject %>
                                                </span>
                                            </td>
                                            <td class="message-preview" title="<%= contact.message %>">
                                                <%= contact.message.length > 50 ? contact.message.substring(0, 50) + '...' : contact.message %>
                                            </td>
                                            <td><%= new Date(contact.date).toLocaleDateString('en-IN') %></td>
                                            <td>
                                                <span class="badge bg-<%= contact.read ? 'success' : 'warning' %> status-badge">
                                                    <%= contact.read ? 'Read' : 'Unread' %>
                                                </span>
                                            </td>
                                            <td>
                                                <div class="action-btns">
                                                    <a href="/edit-contact/<%= contact._id %>" class="btn btn-sm btn-warning me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form action="/contacts/delete/<%= contact._id %>" method="POST" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this contact?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-envelope text-muted" style="font-size: 4rem;"></i>
                                <h4 class="mt-3 text-muted">No contact messages found</h4>
                                <p class="text-muted">When someone fills the contact form, messages will appear here.</p>
                                <a href="/contact" class="btn btn-primary">
                                    <i class="fas fa-envelope me-2"></i>Go to Contact Page
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simple search functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.className = 'form-control mb-3';
            searchInput.placeholder = 'Search messages by name, email, or subject...';
            
            const table = document.querySelector('table');
            if (table) {
                table.parentNode.insertBefore(searchInput, table);
                
                searchInput.addEventListener('keyup', function() {
                    const filter = this.value.toLowerCase();
                    const rows = table.querySelectorAll('tbody tr');
                    
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(filter) ? '' : 'none';
                    });
                });
            }
        });
    </script>
</body>
</html>