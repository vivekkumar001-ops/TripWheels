<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Registration - TripWheels Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-custom {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }

        .sidebar-header {
            background: linear-gradient(135deg, #4361ee, #3f37c9);
        }

        .table th {
            background-color: #4361ee;
            color: white;
        }

        .action-btns .btn {
            padding: 5px 10px;
            font-size: 0.875rem;
        }
    </style>
</head>

<body class="bg-light">
    <!-- Include Dashboard Header -->
    <%- include('header'); %>

        <!-- Dashboard Content -->
        <div class="container-fluid py-4">
            <div class="row">
                <!-- Include Dashboard Sidebar -->
                <%- include('sidebar'); %>

                    <!-- Main Content Area -->
                    <div class="col-lg-9 col-md-8">
                        <!-- Page Header -->
                        <div class="card shadow-sm border-0 mb-4">
                            <div class="card-header bg-white border-0 py-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h3 class="card-title mb-0 text-primary">
                                        <i class="fas fa-users me-2"></i>User Registrations
                                    </h3>
                                    <div>
                                        <a href="/add-product" class="btn btn-sm btn-primary me-2">
                                            <i class="fas fa-plus me-1"></i>Add New User
                                        </a>
                                        <a href="/dashboard" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h4 class="card-title mb-0">
                                            <%= userCount || 0 %>
                                        </h4>
                                        <p class="card-text mb-0">Total Users</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h4 class="card-title mb-0">
                                            <%= new Set(users.map(u=> u.preferredcity)).size %>
                                        </h4>
                                        <p class="card-text mb-0">Cities Covered</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h4 class="card-title mb-0">
                                            <%= users.filter(u=> u.emailaddress).length %>
                                        </h4>
                                        <p class="card-text mb-0">Verified Emails</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- User Registrations Table -->
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <% if (typeof error !=='undefined' ) { %>
                                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                        <%= error %>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                    </div>
                                    <% } %>

                                        <% if (users && users.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover table-bordered table-striped">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            <th>S.NO</th>
                                                            <th>First Name</th>
                                                            <th>Last Name</th>
                                                            <th>Email ID</th>
                                                            <th>Phone Number</th>
                                                            <th>Preferred City</th>
                                                            <th>Registration Date</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% users.forEach((user, index)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td>
                                                                    <%= user.firstname %>
                                                                </td>
                                                                <td>
                                                                    <%= user.lastname %>
                                                                </td>
                                                                <td>
                                                                    <%= user.emailaddress %>
                                                                </td>
                                                                <td>
                                                                    <%= user.phonenumber %>
                                                                </td>
                                                                <td>
                                                                    <span class="badge bg-primary">
                                                                        <%= user.preferredcity %>
                                                                    </span>
                                                                </td>
                                                                <td>
                                                                    <%= new
                                                                        Date(user.createdAt).toLocaleDateString('en-IN')
                                                                        %>
                                                                </td>
                                                                <!-- Edit button in view-registration.ejs table -->
                                                                <td class="action-btns">
                                                                    <a href="/edit-registration/<%= user._id %>"
                                                                        class="btn btn-sm btn-warning me-1"
                                                                        title="Edit User">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <a href="/delete-registration/<%= user._id %>"
                                                                        class="btn btn-sm btn-danger"
                                                                        onclick="return confirm('Are you sure you want to delete this user?')"
                                                                        title="Delete User">
                                                                        <i class="fas fa-trash"></i>
                                                                    </a>
                                                                </td>
                                                                <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>

                                            <!-- Summary -->
                                            <div class="row mt-4">
                                                <div class="col-md-12">
                                                    <div class="alert alert-info">
                                                        <h6><i class="fas fa-info-circle me-2"></i>Summary</h6>
                                                        <ul class="mb-0">
                                                            <li>Total Users: <strong>
                                                                    <%= users.length %>
                                                                </strong></li>
                                                            <li>Unique Cities: <strong>
                                                                    <%= new Set(users.map(u=> u.preferredcity)).size %>
                                                                </strong></li>
                                                            <li>Latest Registration:
                                                                <strong>
                                                                    <%= new
                                                                        Date(users[0].createdAt).toLocaleDateString('en-IN')
                                                                        %>
                                                                </strong>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center py-5">
                                                    <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                                                    <h4 class="mt-3 text-muted">No users registered yet</h4>
                                                    <p class="text-muted mb-4">When users register through the website,
                                                        they will appear here.</p>
                                                    <a href="/register" class="btn btn-primary">
                                                        <i class="fas fa-user-plus me-2"></i>Go to Registration Page
                                                    </a>
                                                </div>
                                                <% } %>
                            </div>
                        </div>

