<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TripWheels - Book Tourist Vehicles Across India</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/img/bus.avif');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
        }
        .vehicle-card {
            transition: transform 0.3s ease;
            border: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .vehicle-card:hover {
            transform: translateY(-5px);
        }
        .city-card {
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            height: 250px;
        }
        .city-card img {
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        .city-card:hover img {
            transform: scale(1.1);
        }
        .city-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0,0,0,0.8));
            color: white;
            padding: 20px;
        }
        .booking-form {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 30px;
        }
        .feature-icon {
            width: 60px;
            height: 60px;
            background: #0d6efd;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }
        .navbar-brand {
            font-weight: bold;
            color: #0d6efd !important;
        }
        .user-menu {
            min-width: 200px;
        }
        .nav-link.active {
            font-weight: bold;
            color: #0d6efd !important;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fs-3" href="/">
                <i class="fas fa-car-side me-2"></i>TripWheels
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'home') ? 'active' : '' %>" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'vehicles') ? 'active' : '' %>" href="/vehicles">Vehicles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'cities') ? 'active' : '' %>" href="/cities">Cities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'about') ? 'active' : '' %>" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'contact') ? 'active' : '' %>" href="/contact">Contact</a>
                    </li>
                    
                    <!-- Dashboard link for logged in users -->
                    <% if (user) { %>
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof activePage !== 'undefined' && activePage === 'dashboard') ? 'active' : '' %>" href="/dashboard">Dashboard</a>
                    </li>
                    <% } %>
                </ul>
                
                <!-- User Menu / Login Button -->
                <div class="d-flex">
                    <% if (user) { %>
                        <!-- Logged in user -->
                        <div class="dropdown">
                            <button class="btn btn-outline-primary dropdown-toggle" type="button" 
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user me-1"></i> <%= user.firstname %>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end user-menu">
                                <li class="dropdown-header">
                                    <small>Logged in as</small><br>
                                    <strong><%= user.name %></strong>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/my-bookings">
                                        <i class="fas fa-calendar-check me-2"></i>My Bookings
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/settings">
                                        <i class="fas fa-cog me-2"></i>Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="/logout" onclick="return confirm('Are you sure you want to logout?')">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    <% } else { %>
                        <!-- Not logged in -->
                        <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                        <a href="/register" class="btn btn-primary">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>